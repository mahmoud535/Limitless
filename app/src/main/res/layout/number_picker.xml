<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        tools:text="Year"
        android:textAlignment="center"
        android:background="@color/green"
        android:textSize="@dimen/font_lg"
        android:fontFamily="@font/roboto_bold"
        android:padding="@dimen/_6sdp"
        android:id="@+id/number_picker_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_num_picker"
        app:layout_constraintTop_toBottomOf="@id/number_picker_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textSize="@dimen/font_lg"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@id/card_num_picker"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_12sdp"
        android:textColor="@color/green"
        android:id="@+id/number_picker_ok"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textSize="@dimen/font_lg"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toTopOf="@id/number_picker_ok"
        app:layout_constraintBottom_toBottomOf="@id/number_picker_ok"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_12sdp"
        android:textColor="@color/green"
        android:id="@+id/number_picker_cancel"
        />


</androidx.constraintlayout.widget.ConstraintLayout>