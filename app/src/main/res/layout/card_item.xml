<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_8sdp"
    android:background="@drawable/card_item_shape"
    android:layout_marginBottom="@dimen/_8sdp">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn_select_card"
        android:scaleX="1.3"
        android:scaleY="1.3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit_card"
        android:textColor="@color/black"
        android:textSize="@dimen/font_md"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_select_card"
        android:id="@+id/credit_text"
        android:layout_marginStart="@dimen/_10sdp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="****7282 - Expire 8/2022"
        android:maxLines="1"
        android:textColor="@color/grey_1000"
        android:textSize="@dimen/font_md"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/credit_text"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintRight_toLeftOf="@id/edit_card"
        app:layout_constraintLeft_toLeftOf="@id/credit_text"
        android:id="@+id/card_info"
        android:layout_marginEnd="@dimen/_8sdp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/edit_card"
        />

</androidx.constraintlayout.widget.ConstraintLayout>