        <!--            android:text="Add to Cart"-->
        <!--            android:textColor="@color/main_color"-->
        <!--            android:textSize="@dimen/_9sdp"-->

        <!--            />-->

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>